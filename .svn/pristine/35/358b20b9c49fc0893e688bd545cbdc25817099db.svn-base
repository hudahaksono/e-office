@model Surat.Models.Entities.Surat

@{
    var redaksi = Model.Redaksi;

    var lstRedaksi = new List<SelectListItem>();
    lstRedaksi.Add(new SelectListItem { Text = "", Value = "" });

    if (!string.IsNullOrEmpty(redaksi))
    {
        if (redaksi != "Tembusan")
        {
            lstRedaksi.Add(new SelectListItem { Text = "Penanggung Jawab", Value = "Penanggung Jawab" });
        }
    }
    else
    {
        lstRedaksi.Add(new SelectListItem { Text = "Penanggung Jawab", Value = "Penanggung Jawab" });
    }

    lstRedaksi.Add(new SelectListItem { Text = "Tembusan", Value = "Tembusan" });
}

@*<script src='@Url.Content("~/resources/js/ckeditor.js")' type="text/javascript"></script>*@

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">

                    <!-- CONTENT MAIL -->
                    <div class="demo col-sm-12 col-xs-12 mail_view">
                        <div class="inbox-body">
                            <div class="col-md-12 col-xs-12" style="text-align:center; background-color:beige; font-family: 'Varela Round', sans-serif; margin-bottom:10px;">
                                <h4>SURAT MASUK</h4>
                            </div>
                            <div class="mail_heading row">
                                <div class="col-md-6 col-xs-12">
                                    <div class="compose-btn">
                                        <a id="LinkArsip" class="btn btn-sm btn-primary" href="#" onclick="ArsipSurat();"><i class="fa fa-check"></i>&nbsp;&nbsp;Selesai / Arsip</a>
                                        <a id="LinkSelesaiSuratInbox" class="btn btn-sm btn-primary" href="#" onclick="SelesaiSuratInbox();"><i class="fa fa-check"></i>&nbsp;&nbsp;Selesai</a>
                                        <button id="BtnTolak" class="btn btn-sm btn-danger" type="button"><i class="fa fa-times-circle"></i>&nbsp;&nbsp;Tolak</button>
                                        <button id="BtnKembalikan" class="btn btn-sm btn-warning" type="button"><i class="fa fa-mail-reply"></i>&nbsp;&nbsp;Kembalikan</button>
                                        <br />
                                        <button id="BtnBuatSuratKeluar" class="btn btn-sm btn-success" type="button"><i class="fa fa-edit"></i>&nbsp;&nbsp;Buat Surat Keluar Jawaban</button>
                                        <button id="BtnBuatNotulen" class="btn btn-sm btn-success" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Notulen</button>
                                        @*<button id="BtnCetakInbox" title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Cetak" class="btn  btn-sm tooltips"><i class="fa fa-print"></i> </button>*@
                                        <button id="BtnInboxHistory" title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Perjalanan Surat" class="btn  btn-sm tooltips"><i class="fa fa-list-ul"></i> </button>
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12 text-right">
                                    @{
                                        var waktu = "";
                                        if (Model.Waktu.Tahun > 0)
                                        {
                                            waktu += string.Concat(Model.Waktu.Tahun, " Tahun ");
                                        }
                                        if (Model.Waktu.Bulan > 0)
                                        {
                                            waktu += string.Concat(Model.Waktu.Bulan, " Bulan ");
                                        }
                                        if (Model.Waktu.Hari > 0)
                                        {
                                            waktu += string.Concat(Model.Waktu.Hari, " Hari ");
                                        }
                                        if (Model.Waktu.Jam > 0)
                                        {
                                            waktu += string.Concat(Model.Waktu.Jam, " Jam ");
                                        }
                                        if (Model.Waktu.Menit > 0)
                                        {
                                            waktu += string.Concat(Model.Waktu.Menit, " Menit");
                                        }
                                        var waktutunggak = "";
                                        var warnatunggak = "black";
                                        if (Model.WaktuTunggak != null)
                                        {
                                            if (Model.WaktuTunggak.Tahun > 0)
                                            {
                                                waktutunggak += string.Concat(Model.WaktuTunggak.Tahun, " Tahun ");
                                                warnatunggak = "red";
                                            }
                                            if (Model.WaktuTunggak.Bulan > 0)
                                            {
                                                waktutunggak += string.Concat(Model.WaktuTunggak.Bulan, " Bulan ");
                                                warnatunggak = "red";
                                            }
                                            if (Model.WaktuTunggak.Hari > 0)
                                            {
                                                waktutunggak += string.Concat(Model.WaktuTunggak.Hari, " Hari ");
                                                if (Model.WaktuTunggak.Hari > 14)
                                                {
                                                    warnatunggak = "red";
                                                }
                                            }
                                            if (Model.WaktuTunggak.Jam > 0)
                                            {
                                                waktutunggak += string.Concat(Model.WaktuTunggak.Jam, " Jam ");
                                            }
                                            if (Model.WaktuTunggak.Menit > 0)
                                            {
                                                waktutunggak += string.Concat(Model.WaktuTunggak.Menit, " Menit");
                                            }
                                        }
                                    }
                                    <p class="date"> @Model.TanggalInbox<br />[Surat berada di anda selama @waktu]<br /><span style="color:@warnatunggak">[Surat telah tercatat selama @waktutunggak]</span></p>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <h4> @Model.Perihal</h4>
                                </div>
                            </div>

                            <form class="form-horizontal form-label-left" style="padding-top:10px;">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Metode Pengiriman:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.Sumber_Keterangan, new { @class = "form-control", @id = "cmbSumberSurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Asal Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.PengirimSurat, new { @class = "form-control", @id = "pengirimsurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Tujuan Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.PenerimaSurat, new { @class = "form-control", @id = "penerimasurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Sifat Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.SifatSurat, new { @class = "form-control", @id = "sifatsurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Jenis Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.TipeSurat, new { @class = "form-control", @id = "tipesurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Tanggal Surat:</label>
                                            <div class="col-md-5 col-sm-5 col-xs-12">
                                                <div class='input-group date' id='tglSurat' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.TanggalSurat, new { @class = "form-control", @id = "tanggalsurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Tanggal Terima:</label>
                                            <div class="col-md-5 col-sm-5 col-xs-12">
                                                <div class='input-group date' id='tglTerima' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.TanggalTerima, new { @class = "form-control", @id = "tanggalterima", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="DivTanggalUndangan">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Tanggal Undangan:</label>
                                            <div class="col-md-5 col-sm-5 col-xs-12">
                                                <div class='input-group date' id='tglUndangan' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.InfoTanggalUndangan, new { @class = "form-control", @id = "tanggalundangan", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small; color:#159078; font-weight: bold !important;" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="DivTargetSelesaiSuratMasuk">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left; color: #1abb9c;">Target Selesai:</label>
                                            <div class="col-md-4 col-sm-4 col-xs-12" style="padding-right:0;">
                                                <div class='input-group date' id='tglTargetSuratMasuk' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.TargetSelesaiSuratMasuk, new { @class = "form-control", @id = "targetselesaisuratmasuk" })
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3 col-xs-12" style="padding-left:3px;">
                                                <span class="btn btn-success" id="BtnSimpanTarget" style="cursor:pointer;">
                                                    <span class="fa fa-save"></span>&nbsp;Simpan
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group" id="DivInfoTargetSelesaiSuratMasuk">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Target Selesai:</label>
                                            <div class="col-md-5 col-sm-5 col-xs-12">
                                                <div class='input-group date' id='infoTargetSelesaiSM' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.InfoTargetSelesaiSuratMasuk, new { @class = "form-control", @id = "infotargetselesaisuratmasuk", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Nomor Agenda:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.NomorAgendaSurat, new { @class = "form-control", @id = "nomoragendasurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Nomor Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.NomorSurat, new { @class = "form-control", @id = "nomorsurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Keterangan Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.KeteranganSuratRedaksi, new { @class = "form-control", @id = "keterangansurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(Model.KeteranganSuratRedaksi))
                                        {
                                            if (Model.KeteranganSuratRedaksi.ToLower().Contains("tembusan"))
                                            {
                                                <div class="form-group">
                                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Penanggung jawab:</label>
                                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                                        @Html.TextBoxFor(model => model.PenanggungJawab, new { @class = "form-control", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                                    </div>
                                                </div>
                                            }
                                        }
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Perihal:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextAreaFor(model => model.Perihal, new { @class = "form-control", @id = "perihal", @rows = 3, @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Resume Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextAreaFor(model => model.IsiSingkatSurat, new { @class = "form-control", @id = "isisingkatsurat", @rows = 3, @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="attachment">
                                <p>
                                    <span><i class="fa fa-paperclip"></i> <label id="LabelJumlahLampiran"></label> file </span>
                                    <span class="btn btn-primary btn-file" id="TombolTambahFile"><i class="fa fa-plus"></i>&nbsp;&nbsp;Tambah<input type="file" name="UploadFromFile" id="txtUploadFile" class="btn btn-primary" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx" /></span>
                                </p>
                                <ul id="dataplaceholder"></ul>
                            </div>


                            @Html.HiddenFor(m => m.CatatanSebelumnya, new { @id = "CatatanSebelumnya" })

                            @Html.HiddenFor(m => m.ProfileIdSelected, new { @id = "ProfileIdSelected" })
                            @Html.HiddenFor(m => m.PegawaiIdSelected, new { @id = "PegawaiIdSelected" })
                            @Html.HiddenFor(m => m.IsProfileTataUsaha, new { @id = "IsProfileTataUsaha" })

                            <form class="form-horizontal form-label-left" id="frmEntriSuratMasuk" method="post" style="padding-top:20px;">
                                @Html.HiddenFor(m => m.SuratId, new { @id = "SuratId" })
                                @Html.HiddenFor(m => m.SuratInboxId, new { @id = "SuratInboxId" })

                                <div class="col-md-6 col-xs-12" style="padding-left:0px; padding-right:15px;">
                                    <div class="x_title">
                                        <h2>Catatan</h2>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="form-group">
                                        <label style="color: #1abb9c;">Catatan sebelumnya</label>
                                        <div id="LabelCatatanSebelumnya"></div>
                                    </div>
                                    <div class="form-group" id="PanelPerintahDisposisi">
                                        <label>Disposisi</label>
                                        @Html.DropDownListFor(model => model.ArrPerintahDisposisi, new SelectList(@Model.ListPerintahDisposisi, "NamaPerintahDisposisi", "NamaPerintahDisposisi"), new { @class = "select2_multiple perintahdisposisi form-control input-md", @style = "width:100%", @id = "cmbDisposisi" })
                                    </div>
                                    <div class="form-group" id="PanelCatatanAnda">
                                        <label>Catatan anda</label>
                                        @Html.TextAreaFor(model => model.CatatanAnda, new { @class = "form-control", @id = "catatananda", @rows = 5, spellcheck = "false", autocomplete = "off", autocorrect = "off", @style = "font-family:'Consolas','helvetica',sans-serif;" })
                                    </div>
                                    @*<div id="editor">
                                            <p>This is some sample content.</p>
                                        </div>*@
                                    <div class="form-group">
                                        <button id="BtnSimpanCatatan" class="btn btn-sm btn-success" type="button"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                                        <button id="BtnProses" class="btn btn-sm btn-success" type="button"><i class="fa fa-flash"></i>&nbsp;&nbsp;Proses/Setuju</button>
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12" style="padding:0px;">
                                    <div id="PanelTujuanSurat">
                                        <div class="x_title">
                                            <h2>Kirim / Disposisi Ke</h2>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Unit Kerja <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                @Html.DropDownListFor(model => model.UnitKerjaIdTujuan, new SelectList(@Model.ListUnitKerja, "UnitKerjaId", "NamaUnitKerja"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbUnitKerjaTujuan", @onchange = "UnitKerjaChanged()" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Jabatan <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <div class='input-group' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.NamaProfileTujuan, new { @class = "form-control", @id = "namaprofiletujuan" })
                                                    <span class="input-group-addon" id="BtnCariJabatan" style="cursor:pointer;">
                                                        <span class="fa fa-search"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Pegawai <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <div class='input-group' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.NamaPegawaiTujuan, new { @class = "form-control", @id = "namapegawaitujuan" })
                                                    <span class="input-group-addon" id="BtnCariPegawai" style="cursor:pointer;">
                                                        <span class="fa fa-search"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Keterangan <span style="color:red">*</span></label>
                                            <div class="col-md-7 col-sm-7 col-xs-12">
                                                @Html.DropDownListFor(model => model.Redaksi, lstRedaksi, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbRedaksi" })
                                            </div>
                                            <div class="col-md-2 col-sm-2 col-xs-12">
                                                <span class="input-group checkbox icheck-primary sr">
                                                    @Html.CheckBoxFor(model => model.IsStatusUrgent, new { @class = "form-control input-md", @id = "checkstatusurgent" })
                                                    @Html.LabelFor(model => model.IsStatusUrgent)
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-3">
                                                <button id="btnsimpantujuansurat" type="button" class="btn btn-primary">Pilih</button>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table id="myTableTujuan" class="table table-striped hover table-bordered" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Jabatan</th>
                                                        <th>Pegawai</th>
                                                        <th>Keterangan</th>
                                                        <th>Hapus</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                        <button id="BtnKirim" class="btn btn-sm btn-success" type="submit"><i class="fa fa-arrow-right"></i>&nbsp;&nbsp;Kirim</button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                    <!-- /CONTENT MAIL -->

                </div>
            </div>
        </div>
    </div>
</div>

<div id='myModalDocViewer' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div id='ListPegawaiModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel" style="padding:20px">
                        <div class="x_title">
                            <h2 id="popuptitle">Daftar Pegawai</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div class="row">
                                <div class="table-responsive" style="padding-right:10px;">
                                    <form id="frmDaftarPegawai"></form>
