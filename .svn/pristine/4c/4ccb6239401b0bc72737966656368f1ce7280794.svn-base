<script src='@Url.Content("~/resources/js/printThis.js")'></script>

<script type="text/javascript">

    var objpdf = null;
    var objfile = null;
    $('#myModalDocViewer').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: 'auto',
            height: '95 %',
            'max-height': '100%'
        });
    });

    $('#ListPegawaiModal').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: '98%',
            height: '98 %',
            'max-height': '98%'
        });
    });

    $(document).ready(function () {
        $.unblockUI();

        $('.select2_single').select2({ width: 'resolve' });

        $('#tglAduan, #tanggallaporan, #tglKejadian, #tanggalkejadian').datetimepicker({
            format: 'DD/MM/YYYY',
            locale: 'id'
            //minDate: moment()
        });

        $('.select2_multiple.perintahdisposisi').select2MultiCheckboxes({
            width: 'resolve',
            templateSelection: function (selected, total, els) {
                var el = els[0], selopts = el.selectedOptions;
                if (selected && selected.find && el.selectedIndex > -1) {
                    //return "Dipilih ".concat(selected.length, " dari ", total, " pilihan");
                    return " " + selected;
                }
                return $(el).attr("placeholder") || this.placeholder;
            }
        });


        // Cek apakah user login punya profile TU
        $.ajax({
            url: '@Url.Action("GetIsMyProfileTU", "Flow")',
            success: function (response) {
                if (response == '1') {
                }
                else {
                    $("#DivHapusLampiran").hide();
                }
            },
            error: function (response) { }
        });


        @*// Cek eselon User
        $.ajax({
            url: '@Url.Action("GetMyEselonId", "Flow")',
            success: function (response) {
                if (response == '1' || response == '2' || response == '3') {
                    $('#DivTargetSelesaiSuratMasuk').show();
                    $("#DivInfoTargetSelesaiSuratMasuk").hide();
                }
                else {
                    $("#DivTargetSelesaiSuratMasuk").hide();
                    $("#DivInfoTargetSelesaiSuratMasuk").show();
                }
            },
            error: function (response) { }
        });*@



        var redaksi = '@Model.Redaksi';
        if (redaksi !== null && redaksi !== '') {
            if (redaksi == 'Tembusan') {
                $("#LinkArsip").hide();
            }
            else {
                $("#LinkSelesaiAduanInbox").hide();
            }
        }

        var statusurgent = '@Model.StatusUrgent';
        if (statusurgent !== null && statusurgent !== '') {
            if (statusurgent == '1') {
                $("#checkstatusurgent").prop("checked", true);
            }
        }


        // Cek apakah pengaduan ini merupakan forward khusus ke profile TU
        @*var aduaninboxid = $('#AduanInboxId').val();
        $.ajax({
            url: '@Url.Action("GetStatusForwardTU", "Pengaduan")?aduaninboxid=' + aduaninboxid + '',
            success: function (response) {
                if (response == '1') {
                    $('#BtnKirim').hide();
                    $('#PanelPerintahDisposisi').hide();
                    $('#PanelTujuanPengaduan').hide();
                }
            },
            error: function (response) { }
        });*@

        //$('.select2_multiple.perintahdisposisi').val([]).trigger("change.select2");

        $('#LabelJumlahLampiran').html('@Model.JumlahLampiran');

        loadLampiranPengaduan();

        // Get Catatan Sebelumnya
        var catatansebelumnya = $('#CatatanSebelumnya').val();
        $('#LabelCatatanSebelumnya').html(catatansebelumnya);

        //var perintahdisposisi = $('#PerintahDisposisi').val();
        //alert(perintahdisposisi);
        var strPerintahDisposisi = '@Model.PerintahDisposisiSebelumnya';
        var arrstrPerintahDisposisi = strPerintahDisposisi.split(',');
        $('.select2_multiple.perintahdisposisi').val(arrstrPerintahDisposisi).trigger("change.select2");

        // Hapus Session Tujuan Pengaduan saat load halaman ini
        $.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
