@model Surat.Models.Entities.Surat

@{
    var lstRedaksi = new List<SelectListItem>();
    lstRedaksi.Add(new SelectListItem { Text = "", Value = "" });
    lstRedaksi.Add(new SelectListItem { Text = "Penanggung Jawab", Value = "Penanggung Jawab" });
    lstRedaksi.Add(new SelectListItem { Text = "Tembusan", Value = "Tembusan" });
}

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">

                    <!-- CONTENT MAIL -->
                    <div class="demo col-sm-12 col-xs-12 mail_view">
                        <div class="inbox-body">
                            <div class="col-md-12 col-xs-12" style="text-align:center; background-color:beige; font-family: 'Varela Round', sans-serif; margin-bottom:10px;">
                                <h4>SURAT INISIATIF</h4>
                            </div>
                            <div class="mail_heading row">
                                <div class="col-md-8 col-xs-12">
                                    <div class="compose-btn">
                                        <a id="LinkArsip" class="btn btn-sm btn-primary" href="#" onclick="ArsipSurat();"><i class="fa fa-check"></i>&nbsp;&nbsp;Selesai / Arsip</a>
                                        <button id="BtnBuatSuratKeluar" class="btn btn-sm btn-success" type="button"><i class="fa fa-edit"></i>&nbsp;&nbsp;Buat Surat Keluar</button>
                                        <button id="BtnBuatNotulen" class="btn btn-sm btn-success" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Notulen</button>
                                        @*<button id="BtnCetakInbox" title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Cetak" class="btn  btn-sm tooltips"><i class="fa fa-print"></i> </button>*@
                                        <button id="BtnInboxHistory" title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Perjalanan Surat" class="btn  btn-sm tooltips"><i class="fa fa-list-ul"></i> </button>
                                    </div>
                                </div>
                                <div class="col-md-4 col-xs-12 text-right">
                                    <p class="date"> @Model.TanggalInbox</p>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <h4> @Model.Perihal</h4>
                                </div>
                            </div>

                            <form class="form-horizontal form-label-left" style="padding-top:10px;">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Pembuat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.PengirimSurat, new { @class = "form-control", @id = "pembuatsurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Target Selesai:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.InfoTargetSelesai, new { @class = "form-control", @id = "targetselesai", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" style="text-align: left;">Keterangan Surat:</label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.TextBoxFor(model => model.KeteranganSuratRedaksi, new { @class = "form-control", @id = "keterangansurat", @readonly = "readonly", @style = "background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important; font-family: 'Varela Round', sans-serif; font-size: small;" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="attachment">
                                <p>
                                    <span><i class="fa fa-paperclip"></i> <label id="LabelJumlahLampiran"></label> file </span>
                                    <span class="btn btn-primary btn-file" id="TombolTambahFile"><i class="fa fa-plus"></i>&nbsp;&nbsp;Tambah File Draft/Konsep Surat<input type="file" name="UploadFromFile" id="txtUploadFile" class="btn btn-primary" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx" /></span>
                                </p>
                                <ul id="dataplaceholder"></ul>
                            </div>


                            @Html.HiddenFor(m => m.CatatanSebelumnya, new { @id = "CatatanSebelumnya" })

                            @Html.HiddenFor(m => m.ProfileIdSelected, new { @id = "ProfileIdSelected" })
                            @Html.HiddenFor(m => m.PegawaiIdSelected, new { @id = "PegawaiIdSelected" })

                            <form class="form-horizontal form-label-left" id="frmEntriSuratKeluar" method="post" style="padding-top:20px;">
                                @Html.HiddenFor(m => m.SuratId, new { @id = "SuratId" })
                                @Html.HiddenFor(m => m.SuratInboxId, new { @id = "SuratInboxId" })
                                @Html.HiddenFor(m => m.Kategori, new { @id = "Kategori" })

                                <div class="col-md-6 col-xs-12" style="padding-left:0px; padding-right:15px;">
                                    <div class="x_title">
                                        <h2>Catatan</h2>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="form-group">
                                        <label style="color: #1abb9c;">Catatan sebelumnya</label>
                                        <div id="LabelCatatanSebelumnya"></div>
                                    </div>
                                    <div class="form-group" id="PanelCatatanAnda">
                                        <label>Catatan anda</label>
                                        @Html.TextAreaFor(model => model.CatatanAnda, new { @class = "form-control", @id = "catatananda", @rows = 3, spellcheck = "false", autocomplete = "off", autocorrect = "off" })
                                    </div>
                                    <div class="form-group">
                                        <button id="BtnProses" class="btn btn-sm btn-success" type="button"><i class="fa fa-flash"></i>&nbsp;&nbsp;Proses/Setuju</button>
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12" style="padding:0px;" id="PanelTujuanSurat">
                                    <div>
                                        <div class="x_title">
                                            <h2>Kirim Ke</h2>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Unit Kerja <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                @Html.DropDownListFor(model => model.UnitKerjaIdTujuan, new SelectList(@Model.ListUnitKerja, "UnitKerjaId", "NamaUnitKerja"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbUnitKerjaTujuan", @onchange = "UnitKerjaChanged()" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Jabatan <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <div class='input-group' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.NamaProfileTujuan, new { @class = "form-control", @id = "namaprofiletujuan" })
                                                    <span class="input-group-addon" id="BtnCariJabatan" style="cursor:pointer;">
                                                        <span class="fa fa-search"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Pegawai <span style="color:red">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <div class='input-group' style="margin-bottom: 0px;">
                                                    @Html.TextBoxFor(model => model.NamaPegawaiTujuan, new { @class = "form-control", @id = "namapegawaitujuan" })
                                                    <span class="input-group-addon" id="BtnCariPegawai" style="cursor:pointer;">
                                                        <span class="fa fa-search"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left;">Keterangan <span style="color:red">*</span></label>
                                            <div class="col-md-7 col-sm-7 col-xs-12">
                                                @Html.DropDownListFor(model => model.Redaksi, lstRedaksi, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbRedaksi" })
                                            </div>
                                            <div class="col-md-2 col-sm-2 col-xs-12">
                                                <span class="input-group checkbox icheck-primary sr">
                                                    @Html.CheckBoxFor(model => model.IsStatusUrgent, new { @class = "form-control input-md", @id = "checkstatusurgent" })
                                                    @Html.LabelFor(model => model.IsStatusUrgent)
                                                </span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-3">
                                                <button id="btnsimpantujuansurat" type="button" class="btn btn-primary">Pilih</button>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table id="myTableTujuan" class="table table-striped table-bordered dt-responsive" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Jabatan</th>
                                                        <th>Pegawai</th>
                                                        <th>Keterangan</th>
                                                        <th>Hapus</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                        <button id="BtnKirim" class="btn btn-sm btn-success" type="submit"><i class="fa fa-arrow-right"></i>&nbsp;&nbsp;Kirim</button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                    <!-- /CONTENT MAIL -->

                </div>
            </div>
        </div>
    </div>
</div>

<div id='myModalDocViewer' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div id='ListPegawaiModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel" style="padding:20px">
                        <div class="x_title">
                            <h2 id="popuptitle">Daftar Pegawai</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div class="row">
                                <div class="table-responsive" style="padding-right:10px;">
                                    <form id="frmDaftarPegawai"></form>
                                    <table id="myTableDaftarPegawai" class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th style="width:5%">#</th>
                                                <th>NIP</th>
                                                <th>Nama</th>
                                                <th>Jabatan</th>
                                                <th style="width:10%">Pilih</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12" style="padding-top:20px;">
                                    <button type="button" class="btn btn-warning" data-dismiss="modal">BATAL</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div id='InboxHistoryModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel" style="padding:20px">
                        <div class="x_title">
                            <h2 id="popuptitle">Perjalanan Surat</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div class="row">
                                <div class="form-group hide" id="DivUnitKerjaHistoriSurat">
                                    <label style="text-align:left;">Filter data berdasarkan Unit Kerja:</label>
                                    @Html.DropDownListFor(model => model.UnitKerjaIdHistoriSurat, new SelectList(@Model.ListUnitKerjaHistoriSurat, "UnitKerjaId", "NamaUnitKerja"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbUnitKerjaHistoriSurat", @onchange = "UnitKerjaHistoriSuratChanged()" })
                                </div>
                                <div class="x_content">
                                    <ul class="list-unstyled timeline" id="historisuratplaceholder"></ul>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12" style="padding-top:20px;">
                                    <button type="button" class="btn btn-warning" data-dismiss="modal">TUTUP</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src='@Url.Content("~/resources/js/printThis.js")'></script>

<script type="text/javascript">

    var objpdf = null;
    var objfile = null;
    var redaksi = "";
    $('#myModalDocViewer').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: 'auto',
            height: '95 %',
            'max-height': '100%'
        });
    });

    $('#ListPegawaiModal').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: '98%',
            height: '98 %',
            'max-height': '98%'
        });
    });

    $(document).ready(function () {
        $.unblockUI();

        $('.select2_single').select2({ width: 'resolve' });

        // Cek nomor surat per satker
        var nosurat = '@Model.NomorSurat';
        if (nosurat !== null && nosurat !== '') {
            $('#nomorsurat').attr("readonly", true);
            $("#nomorsurat").attr('style', 'background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important;');
            $("#BtnNomorSurat").hide();
        }

        // Cek apakah user login punya profile TU
        $.ajax({
            url: '@Url.Action("GetIsMyProfileTU", "Flow")',
            success: function (response) {
                if (response == '1') {
                    if (nosurat == null || nosurat == '')
                    {
                        $("#nomorsurat").prop('readonly', false);
                        $("#nomorsurat").attr('style', 'background-color:white; color:#000000;');
                    }
                }
                else {
                    $("#BtnNomorSurat").hide();
                }
            },
            error: function (response) { }
        });

        $('#BtnProses').hide();

        // Cek apakah surat ini merupakan forward khusus ke profile TU
        var suratinboxid = $('#SuratInboxId').val();
        $.ajax({
            url: '@Url.Action("GetStatusForwardTU", "Flow")?suratinboxid=' + suratinboxid + '',
            success: function (response) {
                if (response == '1') {
                    $('#BtnProses').show();
                    $('#BtnKirim').hide();
                    $('#PanelTujuanSurat').hide();
                }
            },
            error: function (response) { }
        });


        $('#LabelJumlahLampiran').html('@Model.JumlahLampiran');

        loadLampiranSurat();

        // Get Catatan Sebelumnya
        var catatansebelumnya = $('#CatatanSebelumnya').val();
        $('#LabelCatatanSebelumnya').html(catatansebelumnya);

        // Hapus Session Tujuan Surat saat load halaman ini
        $.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
            error: function (response) { }
        });

        createPagingTujuanSurat();

        createPagingDaftarPegawai();

        loadSuratHistory();

        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }

        var statusurgent = '@Model.StatusUrgent';
        //console.log('statusurgent: ' + statusurgent);
        if (statusurgent !== null && statusurgent !== '') {
            if (statusurgent == '1') {
                $("#checkstatusurgent").prop("checked", true);
            }
        }

        redaksi = '@Model.Redaksi';
    });

    var loadLampiranSurat = function () {
        $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
        var id = $('#SuratId').val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("DaftarLampiranSuratKeluar", "Flow")',
            data: { suratid: id },
            success: function (data, textStatus, XMLHttpRequest) {

                if (data == 'noresults') {
                    $('#dataplaceholder').html('');
                }
                else {
                    $('#dataplaceholder').html(data);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    };

    var BukaFileLampiran = function (id, namafile, kantorid) {
        if (id !== null && id !== '') {

            var fileExt = '.' + namafile.toLowerCase().split('.').pop();

            if (fileExt == ".pdf") {
                // Display PDF
                var objurl = '@Url.Action("GetFileSurat", "Flow")?id=' + id + '&kantorid=' + kantorid;
                objpdf = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DocViewer", "Konten")',
                    success: function (data) {
                        $('#myModalContent').html(data);
                        $('#myModalDocViewer').modal(options);
                        $('#myModalDocViewer').modal('show');
                        $.unblockUI();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $.unblockUI();
                    }
                });
            }
            else if (fileExt == ".jpg" || fileExt == ".png") {
                // Display Image
                var objurl = '@Url.Action("GetFileSuratWithExt", "Flow")?id=' + id + '&kantorid=' + kantorid + '&extension=' + fileExt;
                objfile = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ImageViewer", "Konten")',
                    success: function (data) {
                        $('#myModalContent').html(data);
                        $('#myModalDocViewer').modal(options);
                        $('#myModalDocViewer').modal('show');
                        $.unblockUI();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $.unblockUI();
                    }
                });
            }
            else if (fileExt == ".doc" || fileExt == ".docx") {
                // Download Word
                //fileExt = ".doc";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
            else if (fileExt == ".xls" || fileExt == ".xlsx") {
                // Download Excel
                //fileExt = ".xls";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
        }
    }

    var HapusFileLampiran = function (id, namafile) {
        if (id !== null && id !== '') {

            swal({
                title: "Konfirmasi Hapus Data",
                text: "Yakin Anda mau menghapus data lampiran surat " + namafile + " ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya",
                cancelButtonText: "Batal"
            },
            function (isConfirm) {
                if (isConfirm) {
                    $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                    var suratid = $('#SuratId').val();
                    var frm = new FormData();
                    frm.append("suratid", suratid);
                    frm.append("id", id);
                    $.ajax({
                        url: '@Url.Action("HapusLampiranSuratById", "Flow")',
                        type: "POST",
                        data: frm,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (data, textStatus, jqXHR) {
                            if (data && data.Status) {
                                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                                loadLampiranSurat();
                                showinfo('Data berhasil dihapus');

                                // Tulis ulang jumlah lampiran
                                $.ajax({
                                    url: '@Url.Action("GetJumlahLampiranSurat", "Flow")?suratid=' + suratid + '',
                                    success: function (response) {
                                        $('#LabelJumlahLampiran').html(response);
                                    },
                                    error: function (response) { }
                                });
                            }
                            else {
                                showalert("Error", data.Pesan);
                            }
                            $.unblockUI();
                        },
                        error: function (jqXHR, textStatus, errorThrown) { showmsg("Error", errorThrown); $.unblockUI(); }
                    });
                }
            });
        }
    }

    var ArsipSurat = function () {
        var titleText = "Konfirmasi Arsip Surat";
        var contentText = "Yakin Anda mau mengarsipkan surat tersebut ?";
        var successText = "Data berhasil diarsip";
        if (redaksi !== null && redaksi !== '') {
            if (redaksi == 'Tembusan') {
                titleText = "Konfirmasi Selesaikan Surat";
                contentText = "Yakin Anda mau menyelesaikan surat ini ?";
                successText = "Data berhasil diselesaikan";
            }
        }
        swal({
            title: titleText,
            text: contentText,
            type: "input",
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Ya",
            cancelButtonText: "Batal",
            inputPlaceholder: "Catatan"
        },
        function (inputValue) {
            if (inputValue === false) return false;
            $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
            var suratid = $('#SuratId').val();
            var suratinboxid = $('#SuratInboxId').val();
            var frm = new FormData();
            frm.append("suratid", suratid);
            frm.append("suratinboxid", suratinboxid);
            frm.append("catatananda", inputValue);
            frm.append("Redaksi", redaksi);
            $.ajax({
