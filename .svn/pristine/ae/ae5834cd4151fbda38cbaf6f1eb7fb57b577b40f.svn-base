    function PilihJenisDokumen() {
        var _kantorid = $('#ddlKantorId').val();
        var _jenis = $('#ddlJenisDokumen').val();
        closeViewDokumen();
        $('#divJenisDokumen').hide();
        $('#divTipeHak').hide();
        $('#divTipeSU').hide();
        $('#divListDokumen').hide();
        $('#divTahun').hide();
        if (_kantorid != "" && _kantorid != null) {
            $('#divJenisDokumen').show();
            if (_jenis == "DOKUMENHAK") {
                $('#divTipeHak').show();
            } else if (_jenis == "DOKUMENPENGUKURAN") {
                $('#divTipeSU').show();
                $('#divTahun').show();
                PilihKelurahan();
            }
        }
    }

    function PilihKantorId() {
        var _kantorid = $('#ddlKantorId').val();
        var _jenis = $('#ddlJenisDokumen').val();
        PilihJenisDokumen();
        $('#divProvinsi').hide();
        $('#divKabupaten').hide();
        $('#divKecamatan').hide();
        $('#divKelurahan').hide();
        $('#divNomorDokumen').hide();
        $('#divListDokumen').hide();
        $('#divTahun').hide();
        $('#ddlTahun').html("");
        $('#ddlTahun').append($('<option></option>').val("").html("- Pilih Tahun -"));
        if (_kantorid != "" && _kantorid != null) {
            $('#divProvinsi').show();
            $('#divKabupaten').show();
            $('#divKecamatan').show();
            $('#divKelurahan').show();
            $('#divNomorDokumen').show();
            if (_jenis == "DOKUMENPENGUKURAN") {
                $('#divTahun').show();
            }
            $('#ddlProvinsi').html("");
            $('#ddlProvinsi').append($('<option></option>').val("").html("- Pilih Provinsi -"));
            $('#ddlKabupaten').html("");
            $('#ddlKabupaten').append($('<option></option>').val("").html("- Pilih Kabupaten -"));
            $('#ddlKecamatan').html("");
            $('#ddlKecamatan').append($('<option></option>').val("").html("- Pilih Kecamatan -"));
            $('#ddlKelurahan').html("");
            $('#ddlKelurahan').append($('<option></option>').val("").html("- Pilih Kelurahan -"));

            showloading("Menyiapkan List Provinsi");
            $.ajax({
                url: '@Url.Action("GetProvinsiList", "KKP")',
                type: "GET",
                dataType: "JSON",
                data: { kid: _kantorid },
                success: function (data) {
                    $.each(data, function (i, data) {
                        $('#ddlProvinsi').append(
                            $('<option></option>').val(data.Value).html(data.Text));
                    });
                    closeloading();
                }
            });
        }
    }

    function PilihIndukWilayah(step) {
        var _kantorid = $('#ddlKantorId').val();
        var _ddl = "";
        var _ddlInduk = "";
        $('#ddlTahun').html("");
        $('#ddlTahun').append($('<option></option>').val("").html("- Pilih Tahun -"));
        if (step <= 3) {
            _ddl = "Kelurahan";
            _ddlInduk = "Kecamatan";
            $("#ddl" + _ddl).html("");
            $("#ddl" + _ddl).append($('<option></option>').val("").html("- Pilih " + _ddl + " -"));
        }
        if (step <= 2) {
            _ddl = "Kecamatan";
            _ddlInduk = "Kabupaten";
            $("#ddl" + _ddl).html("");
            $("#ddl" + _ddl).append($('<option></option>').val("").html("- Pilih " + _ddl + " -"));
        }
        if (step == 1) {
            _ddl = "Kabupaten";
            _ddlInduk = "Provinsi";
            $("#ddl" + _ddl).html("");
            $("#ddl" + _ddl).append($('<option></option>').val("").html("- Pilih " + _ddl + " -"));
        }
        var _induk = $("#ddl" + _ddlInduk).val();
        if (_kantorid != "" && _kantorid != null && _induk != "" && _induk != null) {
            showloading("Menyiapkan List " + _ddl);
            $.ajax({
                url: '@Url.Action("GetWilayahList", "KKP")',
                type: "GET",
                dataType: "JSON",
                data: { kid: _kantorid, idk: _induk },
                success: function (data) {
                    $.each(data, function (i, data) {
                        $("#ddl" + _ddl).append(
                            $('<option></option>').val(data.Value).html(data.Text));
                    });
                    closeloading();
                }
            });
        }
    }

    function PilihKelurahan() {
        var _jenis = $('#ddlJenisDokumen').val();
        var _kelurahan = $('#ddlKelurahan').val();
        if (_jenis != "" && _jenis != null && _kelurahan != "" && _kelurahan != null) {
            $('#ddlTahun').html("");
            $('#ddlTahun').append($('<option></option>').val("").html("- Pilih Tahun -"));
            if (_jenis == "DOKUMENPENGUKURAN") {
                showloading("Menyiapkan List Tahun");
                var _tipe = $('#ddlTipeSU').val();
                $.ajax({
                    url: '@Url.Action("GetTahunList", "KKP")',
                    type: "GET",
                    dataType: "JSON",
                    data: { jns: _jenis, wid: _kelurahan, tip: _tipe },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $('#ddlTahun').append(
                                $('<option></option>').val(data.Value).html(data.Text));
                        });
                        closeloading();
                    }
                });
            }
        }
    }

