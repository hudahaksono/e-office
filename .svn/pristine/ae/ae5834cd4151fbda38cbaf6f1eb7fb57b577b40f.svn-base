<script type="text/javascript">

    var objpdf = null;
    var objfile = null;
    var redaksi = "";
    $('#tampilanDokumen').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: 'auto',
            height: '95 %',
            'max-height': '100%'

        });
    });

    $('#ListPegawaiModal').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: '98%',
            height: '98 %',
            'max-height': '98%'
        });
    });

    $('#ListLinkModal').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: '700px',
            'max-width': '98%'
        });
    });

    $(document).ready(function () {
        $.unblockUI();
        closeloading();

        //$('.select2_single').select2({ width: 'resolve' });
        $('.select2_single').select2({ width: '100%' });

        $('.select2_multiple.perintahdisposisi').select2MultiCheckboxes({
            placeholder: "Pilih Perintah Disposisi",
            width: 'resolve',
            templateSelection: function (selected, total, els) {
                var el = els[0], selopts = el.selectedOptions;
                if (selected && selected.find && el.selectedIndex > -1) {
                    //return "Dipilih ".concat(selected.length, " dari ", total, " pilihan");
                    return " " + selected;
                }
                return $(el).attr("placeholder") || this.placeholder;
            }
        });

        var isbedaunitkerja = '@Model.IsBedaUnitKerja';
        var tipesurat = '@Model.Kategori';
        if (tipesurat == "Jawaban") {
            if (isbedaunitkerja !== null && isbedaunitkerja !== '') {
                if (isbedaunitkerja == '1') {
                    $("#DivReferensiSurat").hide();
                }
            }
        } else {
            $("#DivReferensiSurat").hide();
        }

        $('#BtnProses').hide();

        // Cek apakah surat ini merupakan forward khusus ke profile TU
        var suratinboxid = $('#SuratInboxId').val();
        $.ajax({
            url: '@Url.Action("GetStatusForwardTU", "Flow")?suratinboxid=' + suratinboxid + '',
            success: function (response) {
                if (response == '1') {
                    $('#BtnProses').show();
                    $('#BtnKirim').hide();
                    $('#PanelTujuanSurat').hide();
                }
            },
            error: function (response) { }
        });


        @*$('#LabelJumlahLampiran').html('@Model.JumlahLampiran');*@

        loadLampiranSurat();

        // Get Catatan Sebelumnya
        var catatansebelumnya = $('#CatatanSebelumnya').val();
        $('#LabelCatatanSebelumnya').html(catatansebelumnya);

        var strPerintahDisposisi = '@Model.PerintahDisposisiSebelumnya';
        var arrstrPerintahDisposisi = strPerintahDisposisi.split(',');
        $('.select2_multiple.perintahdisposisi').val(arrstrPerintahDisposisi).trigger("change.select2");

        // Hapus Session Tujuan Surat saat load halaman ini
        $.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
            error: function (response) { }
        });

        createPagingTujuanSurat();

        createPagingDaftarPegawai();

        createPagingLink();

        createPagingDokumen();

        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }

        var refkategori = '@Model.ReferensiKategori';
        if (refkategori !== null && refkategori !== '') {
            if (refkategori == 'Inisiatif') {
                $("#DivRefTujuanSurat").hide();
                $("#DivRefTanggalSurat").hide();
                $("#DivRefNomorAgenda").hide();
                $("#DivRefNomorSurat").hide();
            }
        }

        redaksi = '@Model.Redaksi';

        loadSuratHistory();
    });

    var loadLampiranSurat = function () {
        $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
        var id = $('#SuratId').val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("DaftarLampiranSurat", "Surat")',
            data: { suratid: id },
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    $('#dataplaceholder').html('');
                }
                else {
                    $('#dataplaceholder').html(data);
                //    let frist = $(data).find('div:first-child a:first-child')[0]
                //    $(frist).trigger('click')
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    };

    let isexpand = false
    var BukaFileLampiran = function (id, namafile, kantorid) {
        if (id !== null && id !== '') {

            var fileExt = '.' + namafile.toLowerCase().split('.').pop();

            if (fileExt == ".pdf") {
                // Display PDF
                var objurl = '@Url.Action("GetFileSurat", "Flow")?id=' + id + '&kantorid=' + kantorid;
                objpdf = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DocViewerWithoutHeader", "Konten")',
                    success: function (data) {
                        $('#tampilanDokumen').html(data);

                        if (!isexpand) {
                            $("#detailSurat").children(".row").children('div').removeClass()
                            $("#detailSurat").addClass("col-md-4 col-xs-12")
                            $("#detailLampiran").addClass("col-md-8 col-xs-12")
                            $("#detailLampiran").show()
                            isexpand = true
                        }

                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                    }
                });
            }
            else if (fileExt == ".jpg" || fileExt == ".jpeg"  || fileExt == ".png") {
                // Display Image
                var objurl = '@Url.Action("GetFileSuratWithExt", "Flow")?id=' + id + '&kantorid=' + kantorid + '&extension=' + fileExt;
                objfile = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ImageViewerWithoutHeader", "Konten")',
                    success: function (data) {
                        $('#tampilanDokumen').html(data);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                    }
                });
            }
            else if (fileExt == ".doc" || fileExt == ".docx") {
                // Download Word
                //fileExt = ".doc";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
            else if (fileExt == ".xls" || fileExt == ".xlsx") {
                // Download Excel
                //fileExt = ".xls";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
        }
    }

