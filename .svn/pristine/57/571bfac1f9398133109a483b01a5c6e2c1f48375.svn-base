            $("#TH_JenisDisposisi").hide();
            $("#TH_Keterangan").hide();
            $("#TH_TanggalTerima").hide();
        }

        var errmessage = "@(ViewBag.ErrMessage)";
        if (errmessage !== null && errmessage !== '') {
            showinfo(errmessage);
        }

    });
    
</script>