@model Surat.Models.Entities.FindSurat

@{
    var lstSortBy = new List<SelectListItem>();
    lstSortBy.Add(new SelectListItem { Text = "Tanggal Kirim", Value = "TanggalKirim" });
    lstSortBy.Add(new SelectListItem { Text = "Tanggal Terima", Value = "TanggalTerima" });
    lstSortBy.Add(new SelectListItem { Text = "Sifat Surat", Value = "SifatSurat" });

    var lstSortType = new List<SelectListItem>();
    lstSortType.Add(new SelectListItem { Text = "Urutan menurun (Descending)", Value = "DESC" });
    lstSortType.Add(new SelectListItem { Text = "Urutan menaik (Ascending)", Value = "ASC" });

    var lstNull = new List<SelectListItem>();

    var lstSumberSurat = new List<SelectListItem>();
    lstSumberSurat.Add(new SelectListItem { Text = "Loket", Value = "Loket" });
    lstSumberSurat.Add(new SelectListItem { Text = "Email", Value = "Email" });

}

<style type="text/css">
    #myTableSuratMasuk > tbody > tr {
        cursor: pointer;
    }

    #myTableSuratMasukLoket > tbody > tr {
        cursor: pointer;
    }

    #myTableSuratMasukEmail > tbody > tr {
        cursor: pointer;
    }

    #TableList_filter, #TableList_info {
        display: none
    }

    #TableList_wrapper {
        overflow: hidden
    }
    @@media only screen and (max-width: 650px) {
        .pc {
            display: none;
        }
    }

    @@media only screen and (max-width: 400px) {
        .mobile {
            display: none;
        }
    }

    
</style>

<div class="" id="dynamic_content">
    <form class="form-horizontal" id="frmCariSurat" method="post">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Kotak Masuk
                    @Html.HiddenFor(model => model.Arah)
                </h3>
            </div>
            <!--Search-->
            <div class="title_right">
                <div class="col-md-8 col-sm-8 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Metadata, new { @class = "form-control", @id = "metadata", @placeholder = "Pencarian..." })
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:0px;" id="DivSortBy">
            <label class="control-label col-md-2 col-sm-2 col-xs-12" style="text-align:left;">Urutan data berdasarkan:</label>
            <div class="col-md-10 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.SortBy, lstSortBy, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSortBy", @onchange = "SortByChanged()" })
            </div>
            @*<div class="col-md-3 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                    @Html.DropDownListFor(model => model.Sumber_Keterangan, lstSumberSurat, "Metode Pengiriman", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSumberSurat", @onchange = "SortByChanged()" })
                </div>*@
        </div>

        <div class="row" style="padding-bottom:0px;" id="DivListMyProfiles">
            <label class="control-label col-md-2 col-sm-2 col-xs-12" style="text-align:left;">Data untuk jabatan:</label>
            <div class="col-md-10 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.SpesificProfileId, new SelectList(@Model.ListMyProfiles, "ProfileId", "NamaProfile"), new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSpesificProfile", @onchange = "ProfileChanged()" })
            </div>
        </div>

        <div class="row" style="padding-bottom:0px;" id="DivFilter">
            <label class="control-label col-md-2 col-sm-2 col-xs-12" style="text-align:left;">Jenis Surat:</label>
            <div class="col-md-5 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.TipeSurat, lstNull, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbTipeSurat", @onchange = "SortByChanged()" })
            </div>

            <div class="col-md-5 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.SortType, lstSortType, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSortType", @onchange = "SortByChanged()" })
            </div>
        </div>
    </form>

    <!-- Nav tabs -->
    <ul id="UlTab" class="nav nav-tabs" role="tablist">
        <li  role="presentation" class="@if (Model.Sumber_Keterangan == "Loket") { <text>active</text> }" ><a href="#KotakMasukLoket" aria-controls="KotakMasukLoket" role="tab" data-toggle="tab"><span class="pc">Kotak Masuk </span><span class="mobile">Dari</span> Loket  <span class="badge bg-green" id="NumKotakMasukLoket" style="display: none"></span></a></li>
        <li  role="presentation" class="@if (Model.Sumber_Keterangan == "Email") { <text>active</text> }" data-sumber="Email"><a href="#KotakMasukEmail" aria-controls="KotakMasukEmail" role="tab" data-toggle="tab"><span class="pc">Kotak Masuk </span><span class="mobile">Dari</span> Email  <span class="badge bg-green" id="NumKotakMasukEmail" style="display: none"></span></a></li>
        <li  role="presentation" class="@if (Model.Sumber_Keterangan == "Internal") { <text>active</text> }" data-sumber="Internal"><a href="#KotakMasukInternal" aria-controls="KotakMasukInternal" role="tab" data-toggle="tab"><span class="pc">Kotak Masuk </span><span class="mobile">Dari</span> Internal  <span class="badge bg-green" id="NumKotakMasukInternal" style="display: none"></span></a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <!--Kotak Masuk dari Loket-->
        <div role="tabpanel" class="tab-pane @if (Model.Sumber_Keterangan == "Loket") { <text>active</text> }" id="KotakMasukLoket" style="background-color:white; padding:10px">
            <div class="table-responsive">
                <table id="myTableSuratMasukLoket" class="table table-striped table-bordered" style="width:100%; background-color:white;">
                    <thead>
                        <tr>
                            <th style="text-align:center;">No.</th>
                            <th style="text-align:center;">Tanggal</th>
                            <th id="TH_NomorSurat">Nomor Surat</th>
                            <th id="TH_NomorAgenda">Nomor Agenda</th>
                            <th>Asal Surat</th>
                            <th id="TH_TujuanSurat">Tujuan Surat</th>
                            <th>Perihal</th>
                            <th id="TH_SifatSurat">Sifat Surat</th>
                            <th id="TH_Sumber">Metode Pengiriman</th>
                            <th id="TH_Keterangan">Keterangan</th>
                            <th style="text-align:center;" id="TH_TanggalTerima">Target Selesai</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!--Kotak Masuk dari Email-->
        <div role="tabpanel" class="tab-pane @if (Model.Sumber_Keterangan == "Email") { <text>active</text> }" id="KotakMasukEmail">
            <div class="table-responsive">
                <table id="myTableSuratMasukEmail" class="table table-striped table-bordered" style="width:100%; background-color:white;">
                    <thead>
                        <tr>
                            <th style="text-align:center;">No.</th>
                            <th style="text-align:center;">Tanggal</th>
                            <th id="TH_NomorSurat">Nomor Surat</th>
                            <th id="TH_NomorAgenda">Nomor Agenda</th>
                            <th>Asal Surat</th>
                            <th id="TH_TujuanSurat">Tujuan Surat</th>
                            <th>Perihal</th>
                            <th id="TH_SifatSurat">Sifat Surat</th>
                            <th id="TH_Sumber">Metode Pengiriman</th>
                            <th id="TH_Keterangan">Keterangan</th>
                            <th style="text-align:center;" id="TH_TanggalTerima">Target Selesai</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>

        </div>
        <!--Kotak Masuk dari Internal-->
        <div role="tabpanel" class="tab-pane @if (Model.Sumber_Keterangan == "Internal") { <text>active</text> }" id="KotakMasukInternal">
            <div class="table-responsive">
                <table id="myTableSuratMasuk" class="table table-striped table-bordered" style="width:100%; background-color:white;">
                    <thead>
                        <tr>
                            <th style="text-align:center;">No.</th>
                            <th style="text-align:center;">Tanggal</th>
                            <th id="TH_NomorSurat">Nomor Surat</th>
                            <th id="TH_NomorAgenda">Nomor Agenda</th>
                            <th>Asal Surat</th>
                            <th id="TH_TujuanSurat">Tujuan Surat</th>
                            <th>Perihal</th>
                            <th id="TH_SifatSurat">Sifat Surat</th>
                            <th id="TH_Sumber">Metode Pengiriman</th>
                            <th id="TH_Keterangan">Keterangan</th>
                            <th style="text-align:center;" id="TH_TanggalTerima">Target Selesai</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>

        </div>

    </div>
</div>


