            return false;
        }

        $('#namapengadu').val('');
        //$('#nomorteleponpelapor').val('');
        //$('#emailpelapor').val('');
        $('#alamatpelapor').val('');
        $('#pekerjaanpengadu').val('');
        //$('#cmbPekerjaanPelapor').val('').trigger('change');

        // Get data dari Dukcapil
        $.ajax({
            url: '@Url.Action("SearchPemohonFromKemendagri", "Pengaduan")',
            type: "GET",
            dataType: "JSON",
            data: { nik: inputnik },
            success: function (datadukcapil) {
                if (datadukcapil != null) {
                    $('#namapengadu').val(datadukcapil.NAMA_LENGKAP);
                    //$('#nomorteleponpelapor').val(datadukcapil.NamaProfile);
                    //$('#emailpelapor').val(datadukcapil.NamaProfile);
                    $('#alamatpelapor').val(datadukcapil.ALAMAT);
                    $('#pekerjaanpengadu').val(datadukcapil.JENIS_PEKERJAAN);
                    //$('#cmbPekerjaanPelapor').val(datadukcapil.JENIS_PEKERJAAN).trigger('change');
                }
                else {
                    showalert('Jabatan ' + data.NamaLengkap + ' tidak ditemukan dalam database');
                }

                $.unblockUI();
                $('#ListPegawaiModal').modal('hide');
            }
        });

        e.preventDefault();
        return false;
    });

    $("#reset-btn").on("click", function (e) {
        ResetForms();
        return false;
    });

    function ResetForms() {
        $('#frmBuatBaruPengaduan')[0].reset();
        $('#cmbKategoriPengaduan').val('').trigger('change');
        $('#cmbLaporMelalui').val('').trigger('change');
        //$('#cmbPekerjaanPelapor').val('').trigger('change');

        ResetTujuanSuratValues();

        // Hapus Session Tujuan Surat
        $.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
            error: function (response) {
                $.unblockUI();
            }
        });
        dtableTujuanSurat.ajax.reload(null, true);

        // Hapus Session Lampiran
        $.ajax({
            url: '@Url.Action("HapusSessionLampiran", "Flow")',
            error: function (response) {
                $.unblockUI();
            }
        });
        dtableLampiranSurat.ajax.reload(null, true);
    };

    $("#frmBuatBaruPengaduan").submit(function (e) {
        if ($("#frmBuatBaruPengaduan").valid()) {

            $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });

            var frm = this, frmdata = new FormData(this);

            // Save to ADUAN
            $.ajax({
                type: "POST",
                url: '@Url.Action("InsertPengaduan", "Pengaduan")',
                data: frmdata,
                contentType: false,
                processData: false,
                success: function (data, textStatus, XMLHttpRequest) {
                    if (data.Status) {
                        // Reset Forms
                        ResetForms();
                        objpdf = null;


                        // Hapus Session Tujuan Surat sebelum keluar dari halaman ini
                        $.ajax({
                            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
                            error: function (response) { }
                        });
                        dtableTujuanSurat.ajax.reload(null, true);


                        // Hapus Session Lampiran sebelum keluar dari halaman ini
                        $.ajax({
                            url: '@Url.Action("HapusSessionLampiran", "Flow")',
                            error: function (response) { }
                        });
                        dtableLampiranSurat.ajax.reload(null, true);


                        // Success message
                        showinfo(data.Pesan);
                    }
                    else {
                        showalert(data.Pesan);
                    }
                    $.unblockUI();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
            });
        }

        e.preventDefault();
        return false;
    });



    var dtableTujuanSurat;
