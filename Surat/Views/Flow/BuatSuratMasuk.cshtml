<script type="text/javascript">

    $(document).ready(function () {
        $.unblockUI();

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
        }

        $('.select2_single').select2({ width: 'resolve' });

        $("#DivTanggalUndangan").hide();

        $('#tglSurat, #tanggalsurat').datetimepicker({
            format: 'DD/MM/YYYY',
            locale: 'id',
            maxDate: moment()
        });
        $('#tglTerima, #tanggalterima').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            locale: 'id',
            maxDate: moment()
        });
        $('#tglUndangan, #tanggalundangan').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            locale: 'id'
        });

        $('#myModalDocViewer').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '98%',
                height: '98 %',
                'max-height': '98%'
            });
        });

        $('#ListPegawaiModal').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '98%',
                height: '98 %',
                'max-height': '98%'
            });
        });

        $.ajax({
            url: '@Url.Action("IsPembuatNomorSuratRole", "Admin")',
            success: function (response) {
                //console.log('response: ' + response);
                if (response == '1') { }
                else {
                    $('#nomorsurat').attr("readonly", true);
                    $("#nomorsurat").attr('style', 'background-color:white; color:#000000; border-color:#ffffff; box-shadow: none !important;');
                    $("#LabelNomorSurat").attr('style', 'color:#cccccc;');
                }
            },
            error: function (response) { }
        });

        // Hapus Session Tujuan Surat saat load halaman ini
        $.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
            error: function (response) { }
        });

        // Hapus Session Lampiran saat load halaman ini
        $.ajax({
            url: '@Url.Action("HapusSessionLampiran", "Flow")',
            error: function (response) { }
        });

        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }

        createPagingTujuanSurat();
        createPagingLampiranSurat();

        createPagingDaftarPegawai();


        // AUTO COMPLETE ASAL SURAT -------------------------------

        $.ajax({
            url: '@Url.Action("GetAsalSurat", "Admin")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                $('#pengirimsurat').autocomplete({
                    lookup: data,
                    lookupFilter: function (suggestion, originalQuery, queryLowerCase) {
                        var re = new RegExp('\\b' + $.Autocomplete.utils.escapeRegExChars(queryLowerCase), 'gi');
                        return re.test(suggestion.value);
                    }
                });
            }
        });

        // EOF AUTO COMPLETE ASAL SURAT ---------------------------

        $(".dt-responsive").each(function () {
            $(this).parent().addClass("col-xs-12")
        })
    });


    $("#reset-btn").on("click", function (e) {
        ResetForms();
        return false;
    });

    function ResetForms() {
        $('#frmBuatBaruSuratMasuk')[0].reset();
        $('#cmbSifatSurat').val('').trigger('change');
        $('#cmbTipeSurat').val('').trigger('change');
        $('#cmbSumberSurat').val('').trigger('change');

        ResetTujuanSuratValues();
        tujuanObj = {}
        tujuanObjIdx = 0;
        $("#datatujuan").html(`<tr><td colspan="5" style="text-align:center;">Tujuan Kosong</td></tr>`)
        $("#tujuanCountBedge span").html("0")
        $("#nomorsurat").css("border", "1px solid #ccc")
        $("#nomorsuratbedge").html(``)
        $("#fileHide").html("")
