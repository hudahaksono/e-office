@model Surat.Models.Entities.Surat

@{
    var lstKeteranganSurat = new List<SelectListItem>();
    lstKeteranganSurat.Add(new SelectListItem { Text = "", Value = "" });
    lstKeteranganSurat.Add(new SelectListItem { Text = "Terbuka", Value = "Terbuka" });
    lstKeteranganSurat.Add(new SelectListItem { Text = "Tertutup", Value = "Tertutup" });

    var lstRedaksi = new List<SelectListItem>();
    lstRedaksi.Add(new SelectListItem { Text = "", Value = "" });
    lstRedaksi.Add(new SelectListItem { Text = "Tembusan", Value = "Tembusan" });
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(this);
    });
</script>

<div class="" id="dynamic_content">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Buat Surat Keluar (Eksternal)
            </h3>
        </div>
        <div class="title_right">
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="">

                <form class="form-horizontal form-label-left" id="frmBuatBaruSuratKeluar" method="post">

                    <div class="x_panel" style="padding-top: 20px; padding-bottom: 10px; margin-bottom: 10px;">
                        <div class="row">
                            <div class="col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Tujuan Surat <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.TextBoxFor(model => model.PenerimaSurat, new { @class = "form-control", @id = "penerimasurat", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.PenerimaSurat, "Tujuan Surat wajib diisi.")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Sifat Surat <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.SifatSurat, new SelectList(@Model.ListSifatSurat, "NamaSifatSurat", "NamaSifatSurat"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSifatSurat", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.SifatSurat, "Sifat Surat wajib dipilih.")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Jenis Surat <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.TipeSurat, new SelectList(@Model.ListTipeSurat, "NamaTipeSurat", "NamaTipeSurat"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbTipeSurat", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.TipeSurat, "Jenis Surat wajib dipilih.")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Tanggal Surat <span style="color:red">*</span></label>
                                    <div class="col-md-5 col-sm-5 col-xs-12">
                                        <div class='input-group date' id='tglSurat' style="margin-bottom: 0px;">
                                            @Html.TextBoxFor(model => model.TanggalSurat, new { @class = "form-control", @id = "tanggalsurat", @required = "required" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TanggalSurat, "Tanggal Surat wajib diisi")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" id="LabelNomorSurat">Nomor Surat</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.TextBoxFor(model => model.NomorSurat, new { @class = "form-control", @id = "nomorsurat" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Perihal <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.TextAreaFor(model => model.Perihal, new { @class = "form-control", @id = "perihal", @rows = 2, @required = "required" })
                                        @Html.ValidationMessageFor(model => model.Perihal, "Perihal wajib diisi.")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Keterangan Surat <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.KeteranganSurat, lstKeteranganSurat, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbKeteranganSurat", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.KeteranganSurat, "Keterangan Surat wajib dipilih.")
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="padding-top:20px;">
                            <div class="col-md-6 col-xs-12">
                                <div class="x_title">
                                    <h2 class="mytitleform">TEMBUSAN SURAT <small>Opsional</small></h2>
                                    <div class="clearfix"></div>
                                </div>

                                @Html.HiddenFor(m => m.ProfileIdSelected, new { @id = "ProfileIdSelected" })
                                @Html.HiddenFor(m => m.PegawaiIdSelected, new { @id = "PegawaiIdSelected" })
                                @Html.HiddenFor(m => m.KategoriTujuanSurat, new { @id = "KategoriTujuanSurat" })

                                <div class="form-group" style="padding-bottom:6px;">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Kategori Tujuan</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div id="gender" class="btn-group" data-toggle="buttons">
                                            <label class="btn btn-primary active" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default" id="LabelOpJabatan">
                                                @Html.RadioButtonFor(model => model.KategoriTujuanSurat, "Jabatan", new { id = "OpJabatan" })
                                                @Html.Label("OpJabatan", "Jabatan", new { @style = "font-family: 'Varela Round', sans-serif; font-weight: normal;" })
                                            </label>
                                            <label class="btn btn-default" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default" id="LabelOpPersonal">
                                                @Html.RadioButtonFor(model => model.KategoriTujuanSurat, "Personal", new { id = "OpPersonal" })
                                                @Html.Label("OpPersonal", "Personal", new { @style = "font-family: 'Varela Round', sans-serif; font-weight: normal;" })
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group" id="DivUnitKerjaTujuanSurat">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Unit Kerja <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.UnitKerjaIdTujuan, new SelectList(@Model.ListUnitKerja, "UnitKerjaId", "NamaUnitKerja"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbUnitKerjaTujuan", @onchange = "UnitKerjaChanged()" })
                                    </div>
                                </div>
                                <div class="form-group" id="DivJabatanTujuanSurat">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Jabatan <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.ProfileIdTujuan, new SelectList(@Model.ListProfileTujuan, "ProfileId", "NamaProfile"), "", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbProfileTujuan", @onchange = "ProfileChanged()" })
                                    </div>
                                </div>
                                <div class="form-group" id="DivPegawaiJabatanTujuanSurat">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Pegawai</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.PegawaiIdTujuan, new SelectList(@Model.ListTujuanPegawai, "PegawaiId", "NamaLengkap"), new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbPegawaiPenerima" })
                                    </div>
                                </div>

                                <div class="form-group" id="DivPegawaiPersonalTujuanSurat">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Pegawai <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <div class='input-group' style="margin-bottom: 0px;">
                                            @Html.TextBoxFor(model => model.NamaPegawaiTujuan, new { @class = "form-control", @id = "namapegawaitujuan" })
                                            <span class="input-group-addon" id="BtnCariPegawaiPersonal" style="cursor:pointer;">
                                                <span class="fa fa-search"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="DivJabatanPegawaiPersonalTujuanSurat">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" style="color:#cccccc;">Jabatan <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.TextBoxFor(model => model.InfoNamaProfileTujuan, new { @class = "form-control", @id = "infonamaprofiletujuan", @readonly = "readonly", @style = "background-color:white; color:#b0b0b0;" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Redaksi <span style="color:red">*</span></label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownListFor(model => model.Redaksi, lstRedaksi, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbRedaksi" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-4">
                                        <button id="btnsimpantujuansurat" type="button" class="btn btn-primary">Simpan</button>
                                    </div>
                                </div>
                                <div class="table-responsive" style="padding-right:10px; padding-left:10px;">
                                    <table id="myTableTujuan" class="table table-striped table-bordered dt-responsive" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Jabatan</th>
                                                <th>Pegawai</th>
                                                <th>Redaksi</th>
                                                <th>Hapus</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <div class="x_title">
                                    <h2 class="mytitleform">FILE SURAT</h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7 col-sm-7 col-xs-12">
                                        <span class="btn btn-primary btn-file"><i class="fa fa-file-pdf-o"></i>&nbsp;&nbsp;Pilih File<input type="file" name="UploadFromFile" id="txtUploadFile" class="btn btn-primary" accept=".pdf" /></span>
                                    </div>
                                </div>
                                <div class="table-responsive" style="padding-right:10px; padding-left:10px;">
                                    <table id="myTableFile" class="table table-striped table-bordered dt-responsive" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>File</th>
                                                <th>Lihat</th>
                                                <th>Hapus</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="title_right">
                        <div class="pull-right" style="padding-bottom:10px;">
                            <button id="save-btn" type="submit" class="btn btn-success">Kirim</button>
                            <button id="reset-btn" type="button" class="btn btn-warning">Reset</button>
                        </div>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


