@model Surat.Models.Entities.FindSurat

@{
    var lstSortBy = new List<SelectListItem>();
    //lstSortBy.Add(new SelectListItem { Text = "", Value = "" });
    lstSortBy.Add(new SelectListItem { Text = "Tanggal Kirim", Value = "TanggalKirim" });
    lstSortBy.Add(new SelectListItem { Text = "Sifat Surat", Value = "SifatSurat" });
    //lstSortBy.Add(new SelectListItem { Text = "Jenis Disposisi", Value = "JenisDisposisi" });
    //lstSortBy.Add(new SelectListItem { Text = "Tanggal Terima", Value = "TanggalTerima" });

    var lstSortType = new List<SelectListItem>();
    //lstSortType.Add(new SelectListItem { Text = "", Value = "" });
    lstSortType.Add(new SelectListItem { Text = "Urutan Waktu Terbaru", Value = "DESC" });
    lstSortType.Add(new SelectListItem { Text = "Urutan Waktu Terlama", Value = "ASC" });


    var lstSumberSurat = new List<SelectListItem>();
    lstSumberSurat.Add(new SelectListItem { Text = "Metode Pengiriman", Value = "" });
    lstSumberSurat.Add(new SelectListItem { Text = "Email", Value = "Email" });
    lstSumberSurat.Add(new SelectListItem { Text = "Loket", Value = "Loket" });
}

<script src='@Url.Content("~/resources/js/infiniteScroll.js")'></script>

<div class="" id="dynamic_content">
    <form class="form-horizontal" id="frmCariSurat" method="post">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Daftar Surat
                </h3>
            </div>
            <div class="title_right">
                <div class="col-md-8 col-sm-8 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Metadata, new { @class = "form-control", @id = "metadata", @placeholder = "Pencarian..." })
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="padding-bottom:0px;">
            <label class="control-label col-md-2 col-sm-2 col-xs-12" style="text-align:left;">Urutan data berdasarkan:</label>
            <div class="col-md-3 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.Sumber_Keterangan, lstSumberSurat, new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSumberSurat", @onchange = "SortByChanged()" })
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.SortBy, lstSortBy, "Kategori Surat", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSortBy", @onchange = "SortByChanged()" })
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12 form-group" style="padding-left:10px; padding-right:10px;">
                @Html.DropDownListFor(model => model.SortType, lstSortType, "Urutan Waktu", new { @class = "select2_single form-control input-md", @style = "width:100%", @id = "cmbSortType", @onchange = "SortByChanged()" })
            </div>

        </div>

    </form>

    <div class="table-responsive">
        <section id="flip-scroll">
            <table id="myTableSuratForEdit" class="table table-striped table-bordered dt-responsive infinite-scroll" style="width:100%; background-color:white;">
                <thead>
                    <tr>
                        <th style="text-align:center;">#</th>
                        <th style="text-align:center;">Tanggal Kirim</th>
                        <th>Nomor Surat</th>
                        <th>Nomor Agenda</th>
                        <th>Asal Surat</th>
                        <th>Tujuan Surat</th>
                        <th>Perihal</th>
                        <th>Sifat Surat</th>
                        <th>Metode Pengirim</th>
                    </tr>
                </thead>
                <tbody id="dataplaceholder"></tbody>
            </table>
        </section>
    </div>
    @Html.Partial("_Loading")
</div>


