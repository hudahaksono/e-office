<script type="text/javascript">

    var objpdf = null;
    var objfile = null;
    $('#myModalDocViewer').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: 'auto',
            height: '95 %',
            'max-height': '100%'
        });
    });

    $('#ListPegawaiModal').on('shown.bs.modal', function () {
        $(this).find('.modal-dialog').css({
            width: '98%',
            height: '98 %',
            'max-height': '98%'
        });
    });

    $(document).ready(function () {
        $.unblockUI();
        closeloading();

        $('.select2_single').select2({ width: 'resolve' });

        $('.select2_multiple.perintahdisposisi').select2MultiCheckboxes({
            width: 'resolve',
            templateSelection: function (selected, total, els) {
                var el = els[0], selopts = el.selectedOptions;
                if (selected && selected.find && el.selectedIndex > -1) {
                    //return "Dipilih ".concat(selected.length, " dari ", total, " pilihan");
                    return " " + selected;
                }
                return $(el).attr("placeholder") || this.placeholder;
            }
        });

        $('#LabelJumlahLampiran').html('@Model.JumlahLampiran');

        loadLampiranSurat();

        // Get Catatan Sebelumnya
        var catatansebelumnya = $('#CatatanSebelumnya').val();
        $('#LabelCatatanSebelumnya').html(catatansebelumnya);

        var strPerintahDisposisi = '@Model.PerintahDisposisi';
        var arrstrPerintahDisposisi = strPerintahDisposisi.split(',');
        $('.select2_multiple.perintahdisposisi').val(arrstrPerintahDisposisi).trigger("change.select2");

        // Hapus Session Tujuan Surat saat load halaman ini
        @*$.ajax({
            url: '@Url.Action("HapusSessionTujuanSurat", "Flow")',
            error: function (response) { }
        });*@

        /*createPagingTujuanSurat();*/

        createPagingDaftarPegawai();

        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }
    });

    var loadLampiranSurat = function () {
        $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
        var id = $('#SuratId').val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("DaftarLampiranSurat", "Flow")',
            data: { suratid: id },
            success: function (data, textStatus, XMLHttpRequest) {

                if (data == 'noresults') {
                    $('#dataplaceholder').html('');
                }
                else {
                    $('#dataplaceholder').html(data);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    };

    var BukaFileLampiran = function (id, namafile, kantorid) {
        if (id !== null && id !== '') {

            var fileExt = '.' + namafile.toLowerCase().split('.').pop();

            if (fileExt == ".pdf") {
                // Display PDF
                var objurl = '@Url.Action("GetFileSurat", "Flow")?id=' + id + '&kantorid=' + kantorid;
                objpdf = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DocViewer", "Konten")',
                    success: function (data) {
                        $('#myModalContent').html(data);
                        $('#myModalDocViewer').modal(options);
                        $('#myModalDocViewer').modal('show');
                        $.unblockUI();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $.unblockUI();
                    }
                });
            }
            else if (fileExt == ".jpg" || fileExt == ".png") {
                // Display Image
                var objurl = '@Url.Action("GetFileSuratWithExt", "Flow")?id=' + id + '&kantorid=' + kantorid + '&extension=' + fileExt;
                objfile = objurl;

                var options = { "backdrop": "static", keyboard: true };
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ImageViewer", "Konten")',
                    success: function (data) {
                        $('#myModalContent').html(data);
                        $('#myModalDocViewer').modal(options);
                        $('#myModalDocViewer').modal('show');
                        $.unblockUI();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $.unblockUI();
                    }
                });
            }
            else if (fileExt == ".doc" || fileExt == ".docx") {
                // Download Word
                //fileExt = ".doc";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
            else if (fileExt == ".xls" || fileExt == ".xlsx") {
                // Download Excel
                //fileExt = ".xls";
                var params = "id=" + id + '&kantorid=' + kantorid + "&extension=" + fileExt;
                var request = new XMLHttpRequest();
                request.responseType = "blob";
                request.open("GET", "GetFileSuratWithExt" + "?" + params);
                request.onload = function () {
                    var url = window.URL.createObjectURL(this.response);
                    var a = document.createElement("a");
                    document.body.appendChild(a);
                    a.href = url;
                    a.download = this.response.name || namafile
                    a.click();
                }
                request.send();
            }
        }
    }

    var HapusFileLampiran = function (id, namafile) {
        if (id !== null && id !== '') {

            swal({
                title: "Konfirmasi Hapus Data",
                text: "Yakin Anda mau menghapus data lampiran surat " + namafile + " ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya",
                cancelButtonText: "Batal"
            },
            function (isConfirm) {
                if (isConfirm) {
                    $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                    var suratid = $('#SuratId').val();
                    var frm = new FormData();
                    frm.append("suratid", suratid);
                    frm.append("id", id);
                    $.ajax({
                        url: '@Url.Action("HapusLampiranSuratById", "Flow")',
                        type: "POST",
                        data: frm,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (data, textStatus, jqXHR) {
                            if (data && data.Status) {
                                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                                loadLampiranSurat();
                                showinfo('Data berhasil dihapus');

                                // Tulis ulang jumlah lampiran
                                $.ajax({
                                    url: '@Url.Action("GetJumlahLampiranSurat", "Flow")?suratid=' + suratid + '',
                                    success: function (response) {
                                        $('#LabelJumlahLampiran').html(response);
                                    },
                                    error: function (response) { }
                                });
                            }
                            else {
                                showalert("Error", data.Pesan);
                            }
                            $.unblockUI();
                        },
                        error: function (jqXHR, textStatus, errorThrown) { showmsg("Error", errorThrown); $.unblockUI(); }
                    });
                }
            });
        }
    }

    var ArsipSurat = function () {
        swal({
            title: "Konfirmasi Arsip Surat",
            text: "Yakin Anda mau mengarsipkan surat tersebut ?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#337ab7",
            confirmButtonText: "Ya",
            cancelButtonText: "Batal"
        },
        function (isConfirm) {
            if (isConfirm) {
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                var suratid = $('#SuratId').val();
                var suratinboxid = $('#SuratInboxId').val();
                var frm = new FormData();
                frm.append("suratid", suratid);
                frm.append("suratinboxid", suratinboxid);
                frm.append("catatananda", $('#catatananda').val());
                $.ajax({
                    url: '@Url.Action("ArsipSurat", "Flow")',
                    type: "POST",
                    data: frm,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data, textStatus, jqXHR) {
                        if (data && data.Status) {
                            showinfo('Data berhasil diarsip');

                            window.location.href = '@Url.Action("SuratMasuk", "Flow")';
                        }
                        else {
                            showalert(data.Pesan);
                        }
