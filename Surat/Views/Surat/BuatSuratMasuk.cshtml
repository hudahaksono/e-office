<script type="text/javascript">
    var dfFileDokumen = null;
    var NomorUmum = "";

    $(document).ready(function () {
        $.unblockUI();

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
        }

        $('.select2_single').select2({ width: 'resolve' });

        $("#DivTanggalUndangan").hide();

        $('#tglSurat, #TanggalSurat').datetimepicker({
            format: 'DD/MM/YYYY',
            locale: 'id',
            maxDate: moment()
        });
        $('#tglTerima, #TanggalTerima').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            locale: 'id',
            maxDate: moment()
        });
        $('#tglUndangan, #TanggalUndangan').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            locale: 'id'
        });

        $('#myModalDocViewer').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '98%',
                height: '98 %',
                'max-height': '98%'
            });
        });

        $('#ListPegawaiModal').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '98%',
                height: '98 %',
                'max-height': '98%'
            });
        });

        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }

        createPagingDaftarPegawai();

        // AUTO COMPLETE ASAL SURAT -------------------------------

        $.ajax({
            url: '@Url.Action("GetAsalSurat", "Admin")',
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                $('#PengirimSurat').autocomplete({
                    lookup: data,
                    lookupFilter: function (suggestion, originalQuery, queryLowerCase) {
                        var re = new RegExp('\\b' + $.Autocomplete.utils.escapeRegExChars(queryLowerCase), 'gi');
                        return re.test(suggestion.value);
                    }
                });
            }
        });

        // EOF AUTO COMPLETE ASAL SURAT ---------------------------

        $(".dt-responsive").each(function () {
            $(this).parent().addClass("col-xs-12")
        })
    });

    $("#reset-btn").on("click", function (e) {
        ResetForms();
        return false;
    });

    function ResetForms() {
        $('#SifatSurat').val('').trigger('change');
        $('#TipeSurat').val('').trigger('change');
        ResetTujuanSuratValues();
        tujuanObj = {};
        tujuanObjIdx = 0;
        $("#datatujuan").html(`<tr><td colspan="5" style="text-align:center;">Tujuan Kosong</td></tr>`);
        $("#tujuanCountBedge span").html("0");
        $("#NomorSurat").css("border", "1px solid #ccc");
        $("#NomorSuratbedge").html(``);
        $("#fileHide").html("");
        $("#tabPdf").html("");
        $("#fileUploaded ul").html(` <li class="active" role="presentation" onclick="btnTambahFileUp()"><a style="cursor:pointer" id="tambahFile"><i class="fa fa-plus-square" style="font-size:1.2em"></i>&nbsp;Tambah File</a></li>`);
        $("#fileHide").html(`<input type="file" id="file1" name="fileUploadStream" style="display:none">`);
        var unitkerjaid = "@(ViewBag.UnitKerjaId)";
        if (unitkerjaid !== null && unitkerjaid !== '') {
            $('#cmbUnitKerjaTujuan').val(unitkerjaid).trigger('change');
        }
        fileCount = 0;
        fileidx = 1;
        $('#tglSurat, #TanggalSurat').val("");
        $('#tglTerima, #TanggalTerima').val("");
        $('#tglUndangan, #TanggalUndangan').val("");
        $("#NomorSurat").val("");
        $("#PengirimSurat").val("");
        $("#Perihal").val("");
    };

    function JenisSuratChanged() {
        var jenissurat = $('#TipeSurat').val();
        if (jenissurat == "Surat Undangan") {
            $("#DivTanggalUndangan").show();
        }
        else {
            $("#DivTanggalUndangan").hide();
            $('#TanggalUndangan').val("");
        }
    };

    $("#frmBuatBaruSuratMasuk").submit(function (e) {
        if ($("#frmBuatBaruSuratMasuk").valid()) {
            if (Object.keys(tujuanObj).length == 0 ){
                swal("Peringatan", "List Tujuan Masih Kosong", "warning")
                e.preventDefault();
                return false;
            }
            if (fileCount == 0) {
                swal("Peringatan", "File Surat Belum Dipilih", "warning")
                e.preventDefault();
                return false;
            }
            var frmdata = new FormData(this);
            frmdata.append("daftarTujuan", JSON.stringify(tujuanObj))
